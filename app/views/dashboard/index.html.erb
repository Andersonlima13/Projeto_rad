<div class="row">
  <div class="col-md-6">
    <h3>Categorias</h3>
    <%= link_to "Gerenciar Categorias", categories_path, class: "btn btn-outline-primary" %>
    <ul class="list-group mt-3">
      <% current_user.categories.limit(5).each do |category| %>
        <li class="list-group-item"><%= category.name %></li>
      <% end %>
    </ul>
  </div>
</div>