<%= turbo_frame_tag dom_id(category) do %>
  <div class="card mb-2">
    <div class="card-body d-flex justify-content-between align-items-center">
      <div>
        <h5 class="card-title mb-0"><%= category.name %></h5>
      </div>
      <div>
        <%= link_to "Editar", edit_category_path(category), class: "btn btn-sm btn-outline-secondary me-2" %>
        <%= button_to "Excluir", category_path(category), 
                      method: :delete, 
                      class: "btn btn-sm btn-outline-danger",
                      form: { data: { turbo_confirm: "Tem certeza?" } } %>
      </div>
    </div>
  </div>
<% end %>